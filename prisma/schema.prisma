generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String       @id @default(cuid())
  email              String       @unique
  name               String
  password           String
  hashedRefreshToken String?
  role               Role         @default(USER)
  templates          Template[]
  forms              Form[]
  deletedAt          DateTime?
  blockedAt          DateTime?
}

model Template {
  id          String      @id @default(cuid())
  title       String
  description String
  image       String
  topicId     String
  topic       Topic       @relation(fields: [topicId], references: [id])
  tags        Tag[]       @relation("TemplateTags")
  questions   Question[]
  createdAt   DateTime    @default(now())
  creatorId   String
  creator     User        @relation(fields: [creatorId], references: [id])
  forms       Form[]
}

model Form {
  id          String      @id @default(cuid())
  templateId  String
  template    Template    @relation(fields: [templateId], references: [id])
  creatorId   String
  creator     User        @relation(fields: [creatorId], references: [id])
  answers     Answer[]
}

model Answer {
  id          String      @id @default(cuid())
  formId      String
  form        Form        @relation(fields: [formId], references: [id], onDelete: Cascade)
  questionId  String
  question    Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
  type        AnswerType
  single_line String?
  multi_line  String?
  integer     Int?
  checkbox    Boolean?
}

model Tag {
  id          String        @id @default(cuid())
  name        String        @unique
  templates   Template[]    @relation("TemplateTags")
}

model Question {
  id          String     @id @default(cuid())
  title       String
  description String
  type        AnswerType
  templateId  String
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  answers     Answer[]
}

model Topic {
  id          String    @id @default(cuid())
  name        String
  templates   Template[]
}

enum Role {
  ADMIN
  EDITOR
  USER
}

enum AnswerType {
  single_line
  multi_line
  integer
  checkbox
}
